{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    // Enforced code style
    "rules": {
        "semi": ["error", "always"],
        "quotes": [ "error", "single"],
        "indent": ["error", 2]
    },
    // All node globals goes here
    "globals": {
        "console": true,
        "process": true
    }
  }